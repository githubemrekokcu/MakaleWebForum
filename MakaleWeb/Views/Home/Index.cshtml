                                                        <li><a href="#" title="">Makale</a></li>
                                                    </ul>
                                                </div>
                                                <div class="job-status-bar">
                                                    <ul class="like-com">
                                                        <li>
                                                            @{
                                                                ArticleLikes artlike = new ArticleLikes();
                                                                artlike = rep_ArtcLike.Find(x =>
                                                                x.article.articleCodeID == article.articleCodeID & x.user.userCodeID == ll.user.userCodeID);
