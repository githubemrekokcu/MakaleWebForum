                                        int diff = (DateTime.Now - SharedDate).Days;
                                        string diffName = "Gün";
                                        string LikesCount = "";
                                        string CommentsCount = "";
                                        try
                                        {
                                            LikesCount = article.likes.Count() > 0 ? article.likes.Count().ToString() : "";
